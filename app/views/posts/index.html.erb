<%= render 'navbar' %>
<div id="blog" class="section md-padding bg-white">
	<!-- Container -->
	<div class="container" id="post-body">
		<!-- Row -->
		<div class="row">
			<!-- Section header -->
			<div class="row">
				<div class="section-header text-center">
					<%= render 'pills' %>
				</div>
			</div>
			<!-- /Section header -->
			
