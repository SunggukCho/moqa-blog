<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
  
  <div class="card post" data-post-id="<%= @post.id %>"> 
    <div class="card-image">
     <% if @post.image.url %> 
       <img src="<%= @post.image.url %>" /> 
     <% end %> 
    </div>
  </div>


<%= link_to 'Edit', edit_post_path(@post) %> |
