<%= render 'navbar' %>
<div id="blog" class="section md-padding">
		<!-- Container -->
		<div class="container">
			<!-- Row -->
			<div class="row">
				<!-- Main -->
				<main id="main" class="col-md-10">
					<div class="blog">
					  <div class="card post" data-post-id="<%= @post.id %>"> 
              <div class="card-image">
               <% if @post.image.url %> 
                 <img src="<%= @post.image.url %>" /> 
               <% end %> 
              </div>
						</div>
						<div class="blog-content-post">
							<ul class="blog-meta">
							  <!--작성 날짜, 시간-->
								<li><i class="fa fa-clock-o"></i>18 Oct</li>
							</ul>
							<h3><%= @post.title %></h3>
							<p><%= @post.content %></p>
						</div>
						<!-- blog tags -->
						<div class="blog-tags">
  						<h5>태그 :</h5>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Web</div>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Design</div>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Marketing</div>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Development</div>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Branding</div>
							<div class="blog-tags-icon"><i class="fa fa-tag"></i>Photography</div>
						</div>
						<!-- blog tags -->
						<!--List, edit, destroy-->
						<div class="blog-tags-plus">
						  <%= link_to '목록으로', posts_path%>
              <%= link_to 'Edit', edit_post_path(@post) %> 
              <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> 
						</div>						
            <p id="notice"><%= notice %></p>
						<!-- blog author -->
						<div class="blog-author">
							<div class="media">
								<div class="media-left">
									<img class="media-object" src="/assets/images/moqa_logo_small.png" alt="">
								</div>
								<div class="media-body">
									<div class="media-heading">
										<h3><%= @post.name %></h3>
										<div class="author-social">
											<a href="#"><i class="fa fa-facebook"></i></a>
											<a href="#"><i class="fa fa-twitter"></i></a>
											<a href="#"><i class="fa fa-google-plus"></i></a>
											<a href="#"><i class="fa fa-instagram"></i></a>
										</div>
									</div>
									<p>Author Introduction</p>
								</div>
							</div>
						</div>
						<!-- /blog author -->
					</div>
				</div>
			</div>
		</div>	



